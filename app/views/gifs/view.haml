- content_for :title do
  Gif - #{ @gif[:file] }

- content_for :header do
  %h1.title.is-inline Gif
  %h5.subtitle.is-inline= @gif[:file]

  %form.is-pulled-right.is-inline{ action: '/gifs/search', method: :get }
    %p.control.is-grouped
      - if logged_in? && current_user.can?(action: :create, resource: Feature.by_name(:gifs, namespace: :public))
        %a.button{ href: '/gifs/new' } Upload
      %input.input{ type: :text, name: :q, placeholder: 'Search Gifs' }
      %button.button Search

- content_for :body do
  %section.section
    .container
      .gif-columns{ style: "display: flex; flex-flow: row wrap; justify-content: space-around; align-items: flex-start; " }
        .gif{ style: "padding-bottom: 2em; margin-bottom: auto; margin-left: auto; margin-right: auto; " }
          %a{ href: "/images/gifs/#{ @gif[:file] }" }
            %img{ src: "/images/gifs/#{ @gif[:file] }" }
          - if @gif[:data].present?
            .media
              .media-content
                %h5.title.is-5= @gif[:data].title
                %p.subtitle.is-6= @gif[:file]
            .content
              - @gif[:data].tags.each do |tag|
                %a{ href: "/gifs/search?q=#{ tag }" }
                  %span.tag= tag
          - else
            .media
              .media-content
                %h5.title.is-5= @gif[:file]
            .content

  - if logged_in? and current_user.can?(resource: Feature.by_name(:gifs, namespace: :public), action: :edit)
    %section.section
      .container
        %h1.title Edit
        %form{ method: :post, enctype: "multipart/form-data" }
          %label.label Title
          .control
            %input.input{ type: :text, placeholder: 'Title', name: :title, value: @gif[:data]&.title }

          %label.label Tags
          .control
            %input.input{ type: :text, placeholder: 'Tags', name: :tags, value: @gif[:data]&.tags.join(', ') }

          .control
            %label.checkbox
              %input{ type: :checkbox, name: :enabled, checked: (true if @gif[:data]&.enabled?) }
                Enabled?

          .control
            %button.button.is-inline.is-pulled-right.is-primary
              Update
