!!!
%html
  %head
    %meta{ 'charset' => "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", 'content' => "IE=edge" }
    %meta{ 'name' => "viewport", 'content' => "width=device-width, initial-scale=1" }

    %link{ rel: 'stylesheet', href: '/static/styles.css' }

    - if content_for? :css
      :css
        = yield_content :css

    - if content_for? :title
      %title #{ yield_content :title } - TransientBug
    - else
      %title TransientBug

  %body{ data: { 'react-router-url' => yield_content(:react_router_url) } }
    %section.hero.is-left.is-bold{ class: "#{ yield_content :header_hero_class if content_for? :header_hero_class }" }
      .hero-header
        %header.header
          .container
            .header-left.header-menu
              %span.header-item
                %a{ href: '/' }
                  Home

              %span.header-item
                %a{ href: '/gifs' }
                  Gifs

            .header-center

            .header-right
              %span.header-item
                - if logged_in?
                  %a{ href: '/logout' }
                    Logout
                - else
                  %a{ href: '/login' }
                    Login

      .hero-content
        .container
          = yield_content :header

      .hero-footer
        = bulma_flash

    - if content_for? :body
      = yield_content :body

    %footer.footer
      .container
        .content.is-centered
          %p
            %strong TransientBug
            by
            %a{ href: 'https://joshisa.ninja' }
              joshisa.ninja.
            The content is licensed
            %a{ href: "http://creativecommons.org/licenses/by-nc-sa/4.0/" }
              CC ANS 4.0
            unless otherwise noted.
          %p
            Built with
            %a{ href: "www.sinatrarb.com" }
              Sinatra
            ,
            %a{ href: "https://facebook.github.io/react"}
              React
            and
            %a{ href:"http://bulma.io/" }
              Bulma

  %script{ type: 'text/javascript', src: '/static/app.js', charset: 'utf-8' }

  - if content_for? :javascript
    :javascript
      = yield_content :javascript
